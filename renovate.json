{
    "extends": [
      "config:recommended",
      ":semanticCommits",
      ":pinDependencies"
    ],
    "baseBranches": [
      "main"
    ],
    "timezone": "America/Los_Angeles",
    "branchPrefix": "renovate-",
    "ignoreDeps": ["simple-git"],
    "packageRules": [
      {
        "groupName": "minor and patch version changes",
        "matchUpdateTypes": [
          "patch",
          "pin",
          "digest",
          "minor"
        ],
        "automerge": true,
        "schedule": [
          "after 2pm on Saturday"
        ],
        "matchPackageNames": [
          "/^.+/"
        ]
      },
      {
        "groupName": "major version changes",
        "matchUpdateTypes": [
          "major"
        ],
        "automerge": false,
        "schedule": [
          "after 2pm on Monday"
        ],
        "matchPackageNames": [
          "/^.+/"
        ]
      },
      {
        "matchDatasources": [
          "orb"
        ],
        "matchUpdateTypes": [
          "patch",
          "minor"
        ],
        "automerge": true
      }
    ]
  }